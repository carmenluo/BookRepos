@page
@model BookListRazor.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

}
<form class="border" method="post" >

    <div class="form-group" style="padding-top:30px;">
        <div class="container row">
            <div class="col-2">

                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="container row">
            <div class="col-2">

                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="container row">
            <div class="col-2">

                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group" style="padding-top:30px;">
            <div class="row">
                <div class="col-2">

                </div>
                <div class="col-2">
                    <input type="submit" value="Submit" class="btn btn-primary form-control" />
                </div>
                <div class="col-2">
                    <a asp-page="Index" class="btn btn-success">Go back to list</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}