@page
@model BookListRazor.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form class="border" method="post">
    <input type="hidden" asp-for="Book.Id"/>
<div class="form-group" style="padding-top:30px;">
    <div class="container row">
        <div class="col-2">
            <label asp-for="Book.Name"></label>
        </div>
        <div class="col-6">
            <input asp-for="Book.Name" />
        </div>
    </div>
</div>
    <div class="form-group" style="padding-top:30px;">
        <div class="container row">
            <div class="col-2">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" />
            </div>
        </div>
    </div>
    <div class="form-group" style="padding-top:30px;">
        <div class="container row">
            <div class="col-2">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" />
            </div>
        </div>
    </div>
    <div class="form-group" style="padding-top:30px;">
        <div class="row">
            <div class="col-2 offset-2">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
           
        </div>
    </div>
</form>